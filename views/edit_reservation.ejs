<%- include layouts/header.ejs %>
<div class="page-data">
	<form method="post" action="/reservation/edit/<%=data[0].idReservation%>">
		<table cellpadding="11" >
			<tr>
				<td>Numéro de la Réservation :</td>
				<td><input type="text" name="numero"
					value="<%=data[0].Numero%>" required></td>
			</tr>
			<tr>
				<td valign="top">Date du début : </td>
				<td><input type="text" name="dateDebut"
					value="<%=data[0].DateDebut%>" required></td>
				</td>
			</tr>
			<tr>
				<td valign="top">Date du fin : </td>
				<td><input type="text" name="dateFin"
					value="<%=data[0].DateFin%>" required></td>
				</td>
			</tr>
			<tr>
				<td>&nbsp;</td>
				<td>&nbsp; <input type="submit" name="submit" value="Modifier">
					<input type="button" name="cancel" value="Annuler" class="cancel"
					onClick="cancelReservation()">
				</td>
			</tr>
		</table>
	</form>

</div>

<%- include layouts/footer.ejs %>
